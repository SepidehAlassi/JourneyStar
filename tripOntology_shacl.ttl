### Shape for Class Journey ###
:JourneyShape a sh:NodeShape  ;
    sh:targetClass :Journey ;
    sh:property
    [
        sh:path :Journey ;
        sh:maxCount 1 ;
        #sh:languageIn ("en" "de" ) ;
    ] ,
    [
        sh:path :arrival ;
        #sh:minCount 1 ;
        sh:datatype xsd:dateTime ; 
    [
        sh:path :departure ;
       # sh:minCount 1 ;
        sh:datatype xsd:dateTime ;
    ] ,
	  [
        sh:path :hasParticipant ;
        sh:class :Person
	sh:minCount 1 ;
    ],
	  [
        sh:path :hasComment ;
        sh:datatype xsd:string ;
    ] ,
	 [
        sh:path :visited ;
        sh:class :Location , 
	         :Architecture;
    ] . 

	    ### Shape for Class Transportation ###
:TransportationShape a sh:NodeShape  ;
    sh:targetClass :Transportation ;
    sh:property
    [
        sh:path :Transportation ;
        sh:maxCount 1 ;
        #sh:languageIn ("en" "de" ) ;
    ] ,
    [
        sh:path :arrival ;
        #sh:minCount 1 ;
        sh:datatype xsd:dateTime ; 
    [
        sh:path :departure ;
       # sh:minCount 1 ;
        sh:datatype xsd:dateTime ;
    ] ,
	  [
        sh:path :hasParticipant ;
        sh:class :Person
	sh:minCount 1 ;
    ],
	  [
        sh:path :hasDestination ;
        sh:class :Location, 
	         :Settlement,
	         :Acommodation;
    ] ,
	 [
        sh:path :hasStop ;
        sh:class :Location ;
	         
    ] ,
	[ 
	 sh:path :transitThrough ;
         sh:class :Location ;
    ] .

